{
    "path": {
        "*.md": {
            "spaceUnits": 2,
            "wordWrap": true,
            "brackets-git.gitPath": "git"
        },
        "*.html": {
            "spaceUnits": 2,
            "wordWrap": true,
            "brackets-git.gitPath": "git"
        },
        "*.scss": {
            "spaceUnits": 4,
            "brackets-git.gitPath": "git"
        },
        "*.css": {
            "spaceUnits": 4,
            "fileFilters": [
                {
                    "name": "public+cache+map",
                    "patterns": [
                        "public/*",
                        ".cache/*",
                        "node-modules/*",
                        "*.map"
                    ]
                },
                {
                    "name": "",
                    "patterns": [
                        "*.css",
                        "*.map.*"
                    ]
                }
            ]
        },
        "*.py": {
            "spaceUnits": 4
        }
    },
    "wordWrap": false,
    "spaceUnits": 4
}
